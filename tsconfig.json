{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"outDir": "./dist"
	},
	"include": ["source/**/*.ts", "source/**/*.tsx", "*.ts", "*.tsx"],
	"exclude": ["node_modules", "dist"]
}
