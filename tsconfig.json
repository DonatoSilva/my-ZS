{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"outDir": "./dist"
	},
	"include": [
		"source/**/*.ts",
		"source/**/*.tsx",
		"*.ts",
		"*.tsx"
		// Aseg√∫rate de incluir todos los directorios y archivos relevantes
	],
	"exclude": [
		"node_modules",
		"dist"
		// Otros directorios a excluir
	]
}
